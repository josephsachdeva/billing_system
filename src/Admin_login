    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try{
            
            rs=st.executeQuery("select * from admin where uname='"+jTextField1.getText()+"' and pass='"+jPasswordField1.getText()+"'");
            if(rs.next()){
                new UPDATE_BILL().setVisible(true);
                this.hide();
            }
            else{
                JOptionPane.showMessageDialog(null,"Enter Right Username/Password");
            }
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,e);
        }
    }
